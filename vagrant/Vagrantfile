BOX_MEM = "2048"
BOX_NAME = "ubuntu/trusty64"

Vagrant.configure("2") do |config|
    # ctci
    config.vm.define "ctci" do |ctci|
        ctci.vm.box = BOX_NAME
        ctci.vm.network :private_network, ip: "192.168.111.111"
        ctci.vm.hostname = "ctci"
        ctci.vm.synced_folder "../", "/var/www/CtCI-6th-Edition-PHP", id: "vagrant-root", owner: "vagrant", group: "www-data"
        ctci.vm.provider :virtualbox do |vb|
            vb.name = "ctci"
            vb.customize ["modifyvm", :id, "--memory", BOX_MEM, "--cpus", 1]
        end
        ctci.vm.provision "ansible" do |ansible|
            ansible.playbook = "../ansible/master.yml"
            ansible.limit = 'ctci'
            ansible.inventory_path = "../ansible/development";
        end
    end
end
